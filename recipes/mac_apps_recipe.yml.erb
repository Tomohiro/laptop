# vim:ft=yaml

resources:
  # Prepare install packages
  - type: command
    script: mas upgrade

  # Install common macOS apps
  <%- mac_apps_common.each do |app| -%>
  - type: command
    script: mas lucky <%= app %>
  <%- end -%>

  # Install macOS apps for personal
  <%- if ENV['MACOS_ENV'] == 'personal' -%>
  <%- mac_apps_personal.each do |app| -%>
  - type: command
    script: mas lucky <%= app %>
  <%- end -%>
  <%- end -%>

  # Install macOS apps for work
  <%- if ENV['MACOS_ENV'] == 'work' -%>
  <%- mac_apps_work.each do |app| -%>
  - type: command
    script: mas lucky <%= app %>
  <%- end -%>
  <%- end -%>

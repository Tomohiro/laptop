# vim:ft=yaml

resources:
  # Prepare install packages
  - type: command
    script: mas upgrade

  # Install common mac apps
  <%- mac_apps.each do |app| -%>
  - type: command
    script: mas lucky <%= app %>
  <%- end -%>

  # Install mac apps for work
  <%- if ENV['MAC_ENV'] == 'work' -%>
  <%- work_mac_apps.each do |app| -%>
  - type: command
    script: mas lucky <%= app %>
  <%- end -%>
  <%- end -%>

  # Install mac apps for personal
  <%- if ENV['MAC_ENV'] == 'personal' -%>
  <%- personal_mac_apps.each do |app| -%>
  - type: command
    script: mas lucky <%= app %>
  <%- end -%>
  <%- end -%>

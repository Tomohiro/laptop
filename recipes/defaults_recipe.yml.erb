# vim: ft=yaml
#
# Defaults configurations for macOS.
# References:
# - https://github.com/mathiasbynens/dotfiles
# - https://qiita.com/djmonta/items/17531dde1e82d9786816
#
# Defaults configrations paths
# - /Library/Preferences/
# - ~/Library/Preferences/
---
resources:
  # Set Language
  - id: set_language
    type: defaults
    domain: NSGlobalDomain
    key: AppleLanguages
    value:
      - "en-JP"
      - "ja-JP"

  # Wipe all (default) app icons from the Dock
  - id: wipe_all_app_iconrs_from_dock
    type: defaults
    domain: com.apple.dock
    key: persistent-apps
    value: []
    notify:
      - restart_dock

  # Automatically hide the Dock
  - id: autohide_dock
    type: defaults
    domain: com.apple.dock
    key: autohide
    value: 1
    notify:
      - restart_dock

  # Donâ€™t automatically rearrange Spaces based on most recent use
  - id: stop_auto_rearrange_spaces
    type: defaults
    domain: com.apple.dock
    key: mru-spaces
    value: 0

  # Avoid creating .DS_Store files on network
  - id: disable_create_ds_store_files_on_network
    type: defaults
    domain: com.apple.desktopservices
    key: DSDontWriteNetworkStores
    value: 'true'
    notify:
      - restart_finder

  # Avoid creating .DS_Store files on usb
  - id: disable_create_ds_store_files_on_usb
    type: defaults
    domain: com.apple.desktopservices
    key: DSDontWriteUSBStores
    value: 'true'
    notify:
      - restart_finder

  # Auto-play videos when opened with QuickTime Player
  - id: autoplay_quicktime_player
    type: defaults
    domain: com.apple.QuickTimePlayerX
    key: MGPlayMovieOnOpen
    value: 1

  # Use plain text mode for new TextEdit documents
  - id: textedit_default_plaintext
    type: defaults
    domain: com.apple.TextEdit
    key: RichText
    value: 0

  # Set the Default shell to Zsh
  - type: command
    check_script: finger -l | grep '/usr/local/bin/zsh'
    script: sudo chsh -s $(which zsh) $(whoami)

handlers:
  - id: restart_dock
    type: command
    script: killall Dock
  - id: restart_finder
    type: command
    script: killall Finder

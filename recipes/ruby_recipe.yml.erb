# vim: ft=yaml
#
# Installed Ruby versions
#
# (1) Default (Mojave)
#   $ /usr/bin/ruby --version
#   ruby 2.3.7p456 (2018-03-28 revision 63024) [universal.x86_64-darwin18]
#
# (2) Homebrew (This is keg-only)
#   $ /usr/local/opt/ruby/bin/ruby -v
#   ruby 2.5.3p105 (2018-10-18 revision 65156) [x86_64-darwin18]
#
# (3) Rbenv's Ruby versions
#   $ ls -l $(rbenv root)/versions
---
resources:
  # rbenv-default-gems
  - type: template
    destination: <%= %x[rbenv root].strip %>/default-gems
    source: templates/default-rubygems.erb

  - type: rbenv_ruby
    version: 2.6.3
    global: true

  # RubyGems
  - type: command
    script: gem update -f
  - type: command
    script: gem cleanup

# vim: ft=yaml
---
resources:
  # rbenv-default-gems
  - type: template
    destination: <%= ENV['HOME'] %>/.rbenv/default-gems
    source: templates/default-rubygems.erb

  # Install Ruby
  - type: rbenv_ruby
    version: 2.5.3
    global: true

  # RubyGems
  - type: command
    script: gem update -f
  - type: command
    script: gem cleanup
